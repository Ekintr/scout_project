  <script>
    function sortPlayers() {
      const container = document.getElementById('players-container');
      const players = Array.from(container.getElementsByClassName('player-card'));

      players.sort((a, b) => {
        const ratingA = parseFloat(a.getAttribute('data-rating'));
        const ratingB = parseFloat(b.getAttribute('data-rating'));
        return ratingB - ratingA; // Büyükten küçüğe sıralama
      });

      // Öğeleri yeniden ekleme
      players.forEach(player => container.appendChild(player));
    }

    function sortLowestPlayers() {
      const container = document.getElementById('players-container');
      const players = Array.from(container.getElementsByClassName('player-card'));

      players.sort((a, b) => {
        const ratingA = parseFloat(a.getAttribute('data-rating'));
        const ratingB = parseFloat(b.getAttribute('data-rating'));
        return ratingA - ratingB; // Küçükten büyüğe sıralama
      });

      // Öğeleri yeniden ekleme
      players.forEach(player => container.appendChild(player));
    }
  </script>
